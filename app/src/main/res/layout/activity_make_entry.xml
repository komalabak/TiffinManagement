<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_make_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pandadesktop4.loginscreen.screen.MakeEntry">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Preferences"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonb1"
        android:textAllCaps="false"
        android:textColor="#ffff25e6"
        android:layout_below="@+id/imageView1"/>
    <ImageView
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:id="@+id/imageView1"
        android:src="@drawable/tiff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Prevoious Preferences"
        android:id="@+id/buttonb2"
        android:layout_below="@+id/buttonb1"
        android:layout_centerHorizontal="true"

        android:textColor="#ffff25e6"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
